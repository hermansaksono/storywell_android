<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/one_day_fitness_list_height"
    android:layout_marginBottom="@dimen/extra_extra_small_margin"
    android:gravity="left"
    android:background="@color/flying_sky_light"
    android:orientation="horizontal"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="@dimen/one_day_fitness_list_height"
        android:layout_height="@dimen/one_day_fitness_list_height"
        android:layout_marginStart="@dimen/list_margin_left"
        android:layout_marginEnd="@dimen/list_margin_left"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:contentDescription="Island"
            app:srcCompat="@drawable/ic_gameview_island" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Day"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/one_day_fitness_list_margin"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Child\s balloon"
            app:srcCompat="@drawable/ic_c_balloon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/equal_to"
            android:textSize="@dimen/one_day_fitness_text_size"
            android:textColor="@color/child_balloon" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="8"
            android:textSize="@dimen/one_day_fitness_text_size"
            android:textStyle="bold"
            android:textColor="@color/child_balloon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/one_day_fitness_list_margin"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Adult\s balloon"
            app:srcCompat="@drawable/ic_a_balloon" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/equal_to"
            android:textSize="@dimen/one_day_fitness_text_size"
            android:textColor="@color/adult_balloon" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="5"
            android:textSize="@dimen/one_day_fitness_text_size"
            android:textStyle="bold"
            android:textColor="@color/adult_balloon" />
    </LinearLayout>


</LinearLayout>